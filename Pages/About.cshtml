@page "/about"
@model About

@{
	Layout = "_Layout";
	ViewData["Title"] = "О компании";
	ViewData["Breadcrumb"] = await Component.InvokeAsync("BreadcrumbSummary", new [] { (url: "/", page: "Главная"),
(url: @Model.aboutPage!.ID.ToString(), page: "О компании") });
}


<div class="col-12 mt-10 pt-per-5">
	<div class="scroll-m row justify-content-between align-items-xl-center">
		<div class="col-12 col-xl-6">
			<div class="black-img__wrapper">
				<div class="black-img">
					<h1 class="black-img-h">Lights 4 Apart</h1>
					<p class="black-img-p">WE CREATE LIGHT</p>
				</div>
			</div>
		</div>
		<div class="hook col-md-12 col-xl-5">
			<h1 class="p__caption mb-per-5">@Model.aboutPage?.HeadingOneNode</h1>
		</div>
	</div>
</div>

@if (@Model.aboutPage?.ParagraphOneNode != null && (@Model.aboutPage?.ImgOneUrl != null || @Model.aboutPage?.VideoOneUrl
		!= null))
{
	<div class="scroll-m col-12 mb-per-5 mt-per-5">
	<div class="row justify-content-between align-items-xl-center">
		<div class="hook col-md-12 col-xl-5 order-block-2">
			<h1 class="p__caption mt-4 mb-per-5">@Model.aboutPage?.ParagraphOneNode</h1>
		</div>
		<div class="col-12 col-xl-6 order-block-1">
			<div class="img-center__wrapper">
				<img class="img-responsive" src="@Model.aboutPage?.ImgOneUrl">
			</div>
		</div>
	</div>
</div>
}

@if (@Model.aboutPage?.ParagraphTwoNode != null && @Model.aboutPage?.HeadingTwoNode != null)
{
	<div class="scroll-m col-12 mb-per-5 mt-per-5">
	<div class="row justify-content-between align-items-xl-center">
		<div class="col-12 col-xl-6">
			<div class="img-center__wrapper">
				<img class="img-responsive" src="@Model.aboutPage?.ImgTwoUrl">
			</div>
		</div>
		<div class="hook col-md-12 col-xl-5">
			<h1 class="h1__caption mb-per-5">@Model.aboutPage?.HeadingTwoNode</h1>
			<h1 class="p__caption mb-per-5">@Model.aboutPage?.ParagraphTwoNode</h1>
		</div>
	</div>
</div>
}

<div class="scroll-m col-12 mb-per-5 mt-per-5">
	<div class="row justify-content-between align-items-xl-center">
		<div class="hook col-md-12 col-xl-5 order-block-2">
			<h2 class="h1__caption mb-per-5">Подберите идеальный свет для вашего интерьера!</h2>
		</div>
		<div class="col-12 col-xl-6 order-block-1">
			<div class="black-img__wrapper">
				<div class="black-img">
					<p class="black-img-p">Create with
					<p></p>
					<h1 class="black-img-h">Lights 4 Apart</h1>
				</div>
			</div>
		</div>
	</div>
</div>