@model Cart

<ul class="d-inline-flex" style="align-items: center;">
	<div class="d-inline-flex text-success">
		<b>Ваша корзина:</b>
		<b id="quantity">@Model?.Lines.Sum(x => x.Quantity)</b>
		<l style="margin: 0 15px 0 5px;">item(s)</l>
		<b id="sumcart">@Model?.ComputeTotalValue().ToString("c")</b>
	</div>
	<a class="btn btn-sm btn-success navbar-btn" style="margin-left: 15px;" asp-page="/Cart"
		asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
		<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-shopping-cart" width="24"
			height="24" viewBox="0 0 24 24" stroke-width="1.75" stroke="currentColor" fill="none" stroke-linecap="round"
			stroke-linejoin="round">
			<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
			<circle cx="6" cy="19" r="2"></circle>
			<circle cx="17" cy="19" r="2"></circle>
			<path d="M17 17h-11v-14h-2"></path>
			<path d="M6 5l14 1l-1 7h-13"></path>
		</svg>
	</a>
</ul>