@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="col-12 mb-per-15 mt-per-5">
	@if (@Model.DisplayAboutPages.Count() > 0)
	{
		<div class="row justify-content-between align-items-xl-center">
			<div class="col-12 col-xl-6">
				<div class="black-img__wrapper">
					<div class="black-img">
						<h1 class="black-img-h">Lights 4 Apart</h1>
						<p class="black-img-p">WE CREATE LIGHT</p>
					</div>
				</div>
			</div>
			<div class="col-md-5 col-xs-12 active">
				<h1 class="p__caption mb-per-5">@Model.DisplayAboutPages[0].HeadingOneNode</h1>
				<a href="/" class="a-btn-link">Узнать больше</a>
			</div>
		</div>
	}
</div>

<div class="col-12">
	@if (@Model.DisplayCategory.Count() > 0)
	{
		<div class="row justify-content-between align-items-xl-center">
			<div class="col-md-5 col-xs-12 active">
				<h1 class="h1__caption mb-per-5">@Model.DisplayCategory[0].CategoryName</h1>
				<p class="p__caption mb-per-5">@Model.DisplayCategory[0].Description</p>
				<a asp-page="CategoryPage" asp-route-CategoryID="@Model.DisplayCategory[0].ID" class="a-btn-link">Узнать больше</a>
			</div>
			<div class="col-12 col-xl-6">
				<div class="img-center__wrapper">
					<img class="img-responsive img-center" src="@Model.DisplayCategory[0].CategoryImg">
				</div>
			</div>
		</div>
	}
</div>